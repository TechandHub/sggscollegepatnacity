<%- include('./partials/header.ejs') %>

        <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <% if(locals.message && locals.message.length > 0){ %>
                        <div id="flashMessage" class="<%= message[1] %> <%= message[2] %> alert text-light border-0 my-4 mx-3 fade show" role="alert">
                            <%= message[0] %>
                        </div>
                    <% }%>
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex flex-column gap-3 mb-3">
                            <img class="mb-0" src="/static-page/img/logocc.png" alt="SGGS College" style="width: 100%;">
                            <a href="/main/login" class="">
                                <h3 class="text-primary">Log In</h3>
                            </a>
                        </div>
                        <form action="/main/login" method="post">
                            <div class="form-floating mb-3">
                                <input name="userName" type="text" class="form-control" id="floatingInput" placeholder="abcdef1234@BDCP" oninput="this.value=this.value.toUpperCase()" required>
                                <label for="floatingInput">User Name</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" oninput="this.value=this.value.toUpperCase()" required>
                                <label for="floatingPassword">Password</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <a href="#">Forgot Password</a>
                            </div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Log In</button>
                            <p class="text-center mb-0">Don't have an Account? <a href="/main/register">Register</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In End -->
    </div>

    <%- include('./partials/jsLibraries.ejs') %>
</body>

</html>