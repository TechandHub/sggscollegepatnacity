<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partial/header.ejs') %>
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partial/spinner.ejs') %>
            <!-- Spinner End -->
            <!-- Sign Up Start -->
            <div class="container-fluid">
                <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                        <!-- Flash message starts -->
                        <%- include('../partial/flashMessage.ejs') %>
                            <!-- Flash message ends -->

                            <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                                <div class="d-flex gap-3 flex-column mb-3">
                                    <img class="mb-0" src="/images/sggscollegelogo.png" alt="SGGS College, Patna City"
                                        style="width: 100%;">
                                    <a href="" class="">
                                        <h5 class="text-primary">Register for UG Regular Sem 1 <%= fullSession %>
                                                Admission</h5>
                                    </a>
                                </div>
                                <form action="/student/<%= courseSession %>/register" method="post">
                                    <div class="form mb-3">
                                        <label class="fw-bolder text-capitalize form-label" for="referenceNumber">PPU
                                            Reference No.</label>
                                        <input name="referenceNumber" type="text" class="form-control"
                                            id="referenceNumber" oninput="this.value = this.value.toUpperCase()" required>
                                    </div>
                                    <div class="form mb-3">
                                        <label class="fw-bolder form-label" for="mobileNumber">Mobile
                                            Number</label>
                                        <input name="mobileNumber" type="number" class="form-control" id="mobileNumber"
                                            required>
                                    </div>
                                    <div class="form mb-3">
                                        <label class="fw-bolder form-label" for="email">Email</label>
                                        <input name="email" type="text" class="form-control" id="email" oninput="this.value = this.value.toLowerCase()" required>
                                    </div>

                                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Register</button>
                                    <p class="text-center mb-3">Already Register ? <a
                                            href="/student/login">Log
                                            In</a></p>
                                </form>
                            </div>
                    </div>
                </div>
            </div>
            <!-- Sign Up End -->
    </div>

    <!-- JavaScript Libraries Starts -->
    <%- include('../partial/jsLibrary.ejs') %>
        <!-- JavaScript Libraries ends -->
</body>

</html>